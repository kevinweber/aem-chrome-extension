{
  "manifest_version": 2,
  "name": "AEM Front Extension",
  "version": "0.3",
  "author": "Kevin Weber",
  "homepage_url": "http://kevinw.de",
  "description": "Add BrowserSync script to all relevant AEM pages on localhost:4502. Plus extras to get things done faster.",

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["base.js", "always.js"],
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "page": "options/index.html",
    "chrome_style": true
  },

  "icons": {
    "16": "img/icon16.png",
    "24": "img/icon24.png",
    "48": "img/icon48.png",
    "240": "img/icon240.png"
  },

  "browser_action": {
    "default_icon": "img/icon24.png",
    "default_popup": "options/index.html"
  },

  "permissions": [
    "tabs",
    "storage"
  ]
}