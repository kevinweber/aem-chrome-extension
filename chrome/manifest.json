{
  "manifest_version": 2,
  "name": "AEM Front Extension",
  "short_name": "AEM Front",
  "version": "0.1.0.2",
  "author": "Kevin Weber",
  "homepage_url": "http://kevinw.de",
  "description": "Add BrowserSync script to all relevant AEM pages on localhost:4502. Plus extras to get work done faster.",

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["base.js", "frontend.js"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "scripts": ["base.js", "background.js"],
    "persistent": false
  },

  "externally_connectable": {
    "matches": [
      "*://*.kevinw.de/*",
      "*://*.kevinweber.org/*",
      "*://*.kevinweber.co/*",
      "*://*.kevinchrisweber.com/*"
    ],
    "accepts_tls_channel_id": false
  },

  "options_ui": {
    "page": "options/index.html",
    "chrome_style": true
  },

  "icons": {
    "16": "img/logo/16.png",
    "24": "img/logo/24.png",
    "48": "img/logo/48.png",
    "240": "img/logo/240.png"
  },

  "browser_action": {
    "default_icon": "img/icons/icon-default.png"
  },

  "permissions": [
    "tabs",
    "storage"
  ]
}